generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}


model EmailTask {
  id Int @id @default(autoincrement())

  level Int
  subject String
  audience String
  tone String
  purpose String

  hint String?
  example String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model UserProgress {
  userId String @id

  emailLevel Int @default(1)
  writeLevel Int @default(1)

  emailCount Int @default(0)
  writeCount Int @default(0)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model AnalysisLog {
  id Int @id @default(autoincrement())

  userId String
  type String
  level Int

  summary String
  focusArea String?

  createdAt DateTime @default(now())
}
